<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/keypad_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="6"
        app:rowCount="5">

        <Button
            android:id="@+id/clear_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/stroke_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/left_bracket_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="("
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/right_bracket_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text=")"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/num_7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/num_8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/num_9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/multi_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/num_4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/num_5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/num_6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/min_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/num_1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/num_2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/num_3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/add_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/num_0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/per_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/black"
            android:text="."
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/equal_butt"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/orange"
            android:text="="
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="4" />


    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>